<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="25dp"
    android:orientation="vertical"
    tools:context=".localizacion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="-2dp"
        android:background="#F4F6F7"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="228dp"
            android:layout_height="129dp"
            android:contentDescription="TODO"
            android:src="@drawable/projectgps" />

        <EditText
            android:id="@+id/edtnombrenino"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input"
            android:fontFamily="@font/arizonia"
            android:hint="Nombre del niÃ±o"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:textColor="#1e8449"
            android:textColorHint="#1e8449"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtfechalocalizarnino"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input"
            android:fontFamily="@font/arizonia"
            android:hint="Fecha a localizar"
            android:inputType="date"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:textColor="#1e8449"
            android:textColorHint="#1e8449"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btncargar2"
            android:layout_width="305dp"
            android:layout_height="31dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#1e8449"
            android:elevation="5dp"
            android:text="Cargar datos"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/edtlatitud"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input"
            android:ems="10"
            android:focusable="false"
            android:fontFamily="@font/arizonia"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="Latitud"
            android:textColor="#1e8449"
            android:textColorHint="#1e8449"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtlongitud"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input"
            android:ems="10"
            android:focusable="false"
            android:fontFamily="@font/arizonia"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="Longitud"
            android:textColor="#1e8449"
            android:textColorHint="#1e8449"
            android:textSize="20sp" />


        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            tools:context=".localizacion" />


    </LinearLayout>

</RelativeLayout>
